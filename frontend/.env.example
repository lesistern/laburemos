# Frontend Environment Variables - Windows
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key

# Windows specific paths
NEXT_PUBLIC_UPLOAD_PATH=C:/xampp/htdocs/Laburar/uploads
NEXT_PUBLIC_STORAGE_PATH=C:/xampp/htdocs/Laburar/storage

# Database (usar XAMPP MySQL o Docker PostgreSQL)
NEXT_PUBLIC_DB_TYPE=mysql
# Para XAMPP MySQL:
# NEXT_PUBLIC_DB_HOST=localhost
# NEXT_PUBLIC_DB_PORT=3306
# Para Docker PostgreSQL:
# NEXT_PUBLIC_DB_HOST=localhost
# NEXT_PUBLIC_DB_PORT=5432
# LaburAR Environment Configuration

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://laburar.com
APP_NAME="LaburAR"
APP_VERSION=1.0.0

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=laburar_db
DB_USERNAME=laburar_user
DB_PASSWORD=your_secure_password

# Test Database
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_DATABASE=laburar_test
TEST_DB_USERNAME=test_user
TEST_DB_PASSWORD=test_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME=laburar_session
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=your_mailgun_username
MAIL_PASSWORD=your_mailgun_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@laburar.com
MAIL_FROM_NAME="LaburAR Platform"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=/var/www/html/storage/uploads

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
API_VERSION=v1

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=laburar_cache
CACHE_TTL=3600

# Queue Configuration
QUEUE_DRIVER=redis
QUEUE_PREFIX=laburar_queue

# Logging Configuration
LOG_LEVEL=info
LOG_CHANNEL=stack
LOG_PATH=/var/www/html/storage/logs

# External Services
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=live

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# AWS Configuration (for S3, SES, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=laburar-assets
AWS_URL=https://s3.amazonaws.com

# Monitoring and Analytics
SENTRY_DSN=https://your-sentry-dsn
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X
HOTJAR_ID=your_hotjar_id

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
CORS_ALLOWED_ORIGINS=https://laburar.com,https://www.laburar.com
CSRF_TOKEN_NAME=_token

# WebSocket Configuration
WEBSOCKET_HOST=localhost
WEBSOCKET_PORT=3001
WEBSOCKET_SSL=true

# Search Configuration
ELASTICSEARCH_HOST=localhost:9200
SEARCH_INDEX=laburar_search

# CDN Configuration
CDN_URL=https://cdn.laburar.com
CDN_ENABLED=true

# Performance
OPCACHE_ENABLED=true
GZIP_ENABLED=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true

# Feature Flags
FEATURE_CHAT_ENABLED=true
FEATURE_VIDEO_CALLS=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_MULTI_CURRENCY=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=laburar-backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="LaburAR is currently under maintenance. We'll be back soon!"

# Development Only (Remove in production)
# DEBUG_BAR_ENABLED=false
# QUERY_LOG_ENABLED=false
# PROFILER_ENABLED=false
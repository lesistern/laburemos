# LABUREMOS Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit actual credentials to version control

# Application
NODE_ENV=development
PORT=3001
APP_NAME=LABUREMOS API
API_VERSION=v1

# Database Configuration
# For development (choose one):
# Option 1: Local MySQL (XAMPP)
DATABASE_URL=mysql://root:@localhost:3306/laburemos_db
# Option 2: Local PostgreSQL  
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/laburemos

# For production: Use AWS Secrets Manager or environment variables
# DATABASE_URL=postgresql://username:password@host:port/database

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=laburemos

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# JWT Configuration - GENERATE SECURE SECRETS
# Use: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# WebSocket Configuration
WS_PORT=3001
WS_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# AWS Configuration (Use IAM roles in production)
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
# For development only (use IAM roles in production):
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
# Security Environment Variables Template
# Copy this file to .env and fill in the actual values
# DO NOT commit .env files to version control

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_EC2_IP=your_ec2_instance_ip

# Database Configuration
AWS_RDS_PASSWORD=your_secure_rds_password_here
LOCAL_DB_PASSWORD=your_local_db_password_here

# Email Configuration
NOTIFICATION_EMAIL=your_notification_email@yourdomain.com
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
MERCADOPAGO_ACCESS_TOKEN=your_mp_access_token

# Security Tokens
JWT_SECRET=your_jwt_secret_here
CSRF_SECRET=your_csrf_secret_here

# Application Configuration
NODE_ENV=production
APP_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com